<div class="user-specific-post">
  <% if notice %>
  <p class="border-green-50 text-white bg-green-400 rounded-md px-6 py-2 mb-4 text-center">
    <%= notice %>
  </p>
  <% end %>

  <%= render partial: "users/user_info", locals: {user: @user} %>

  <div class="post-info">
    <% @user.posts.each do |post| %>
      <%= link_to user_post_path(@user.id, post.id) do %>
        <%= render partial: "users/user_post_card", locals: {post: post} %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="flex flex-col flex-start w-3/4">
  <div class="mb-4">
    <%= 
      link_to 'Create new post',
      new_user_post_url(@user),
      class: "text-blue-600 px-4 py-2 bg-blue-200 border-none rounded-md
        hover:text-gray-50 hover:bg-blue-600"
    %>
  </div>
  <div>
    <%= 
      link_to 'Go Back', user_path(@user.id),
      class: "bg-gray-400 px-5 py-2 rounded hover:text-gray-50 hover:bg-gray-600"
    %>
  </div>
</div>

