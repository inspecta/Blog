<div class="w-full flex flex-col justify-center items-center mx-auto">
  <h1 class="uppercase text-center text-4xl text-blue-800 mb-6 underline">Blog</h1> 

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full mx-auto">
      <div class="field">
        <div class="">
          <%= f.label :name %><br />
        </div>
        <div class="">
          <%= f.text_field :name, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="">
          <%= f.label :bio %>
        </div>
        <div class="">
          <%= f.text_area :bio, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div>
          <%= f.label :email %>
        </div>
        <div>
          <%= 
            f.email_field :email, autofocus: true, 
            autocomplete: "email",
            class: "input"  
          %>
        </div>
      </div>

      <div class="field">
        <div>
          <%= f.label :password %>
        </div>
        <div>
          <% if @minimum_password_length %>
          <em>(min <%= @minimum_password_length %> chars)</em>
          <% end %><br />
          <%= 
            f.password_field :password,
            autocomplete: "new-password",
            class: "input"
          %>
        </div>
      </div>

      <div class="field">
        <div>
          <%= f.label :password_confirmation %>
        </div>
        <div>
          <%=
            f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "input"
          %>
        </div>
      </div>
      </div>
      <div class="mx-auto md:w-1/2 md:mx-auto">
        <%= f.submit "Sign up", class: "btn-primary" %>
      </div>
  <% end %>

  <div class="text-blue-800 font-bold underline">
    <%= render "devise/shared/links" %>
  </div>
</div>
